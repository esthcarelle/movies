{{#partial "content"}}

    <br>
    <br>
    <h1 style="text-align:center; font-weight:bolder;">Upload a video</h1>
    <hr>

    <form action="/upload" method="post">

        <div class="form-group">
            <label for="picture">Picture</label>
            <input type="text" id="picture" name="picture" class="form-control"style="background:transparent; color:white;font-size:20px" required>
        </div>

        <div class="form-group">
            <label for="caption">Caption</label>
            <input type="text" id="caption" name="caption" class="form-control" style="background:transparent; color:white;font-size:20px" required>
        </div>

        <div class="form-group">
            <label for="video">Video</label>
            <input type="text" id="video" name="video" class="form-control" style="background:transparent; color:white;font-size:20px" required>
        </div>


        <button class="btn btn-primary" style="font-size:25px;font-weight:bolder;">Save</button>

    </form>
    <style>
     form{
                      padding:40px;
                      margin: 0 auto;
                      width:50%;
                      border:1px, solid, black;
                      box-shadow: 30px 30px 20px 50px rgba(0,0,0,0.7);
                      border-radius:10px;
                      font-family: 'Josefin Sans', sans-serif;
                   }
                   label{
                      font-size:30px;
                      color:white;
                   }
                   .card-title{
                      font-size:20px;
                   }
                   .row{
                      padding-top:30px;
                      border:1px, solid, black;
                      background-color:rgba(255,255,255,0.3);
                   }

    </style>

