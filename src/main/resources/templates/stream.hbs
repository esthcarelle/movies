<style>

@import url('https://fonts.googleapis.com/css?family=Barriecito|Poiret+One|Unica+One&display=swap');


nav ul {
  list-style-type: none;
  position: absolute;
  underline:none;
  padding: 0;
  overflow: hidden;
  background-color: black;
  display: inline-block;
  width: 60%;
  margin-left:15%;


}

nav li {

  font-family: 'Unica One', cursive;
  font-size: 20px;
 text-decoration: none;
  float: left;
  display: inline-block;
  white-space: nowrap;
  width: 25%;
}

 nav li a {
  display: block;
  color: white;
  text-align: center;
  padding: 14px 16px;
  underline:none;
  text-decoration: none;
}

 nav li a:hover:not(.active) {
  underline:none;
 text-decoration: none;
  color: #D8FC62;
  border:solid 2px #D8FC62;
}

nav .active {
  underline:none;
  border: solid 2px hotpink;
  color: hotpink;
   text-decoration: none;
}

</style>
<body>
<div style="padding-top:15%">

    <h1 style="text-align:center">List of videos</h1>
            <hr>
            <div class="row">
                {{#each uploads}}

                        <div class="col-md-6 ">
                            <div class="card">
                                <div class="card-image">
                                    <div class="embed-responsive embed-responsive-16by9">
                                        <iframe width="350" height="315" src={{video}} frameborder="0" allowfullscreen></iframe>
                                    </div>


                                </div><!-- card image -->

                                <div class="card-content" style="text-align:center">
                                    <span class="card-title"><h3 style="color:white font-weight:bolder">{{caption}}</h3></span>
                                    <button><a href="/delete/{{id}}">delete</a></button>

                                </div><!-- card content -->
                                <hr>


                            </div>
                        </div>


                {{/each}}
            </div>
</div>
